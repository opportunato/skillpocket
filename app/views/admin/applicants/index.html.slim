- title "Check out applicants"

/ = form_tag admin_import_path, method: :post do 
/   = submit_tag "Update mailchimp"
section.admin
  h2 Approved
  table
    tr
      th Twitter handle
      th Name
      th iOS
      th Categories
      th Approved
    - @experts.each do |user|
      tr
        td = link_to "@#{user.twitter_handle}", user_path("@#{user.twitter_handle}")
        td = user.full_name
        td = user.smartphone_os
        td = user.skill_categories_text
        td = user.approved ? "Yes" : "No"

  h2 Applied
  table
    tr
      th Twitter handle
      th Name
      th iOS
      th Categories
      th Approved
    - @applicants.each do |user|
      tr
        td 
          - if user.twitter_handle
            = link_to "@#{user.twitter_handle}", user_path("@#{user.twitter_handle}"), target: "_blank"
        td = user.full_name
        td = user.smartphone_os
        td = user.skill_categories_text
        td = user.approved ? "Yes" : "No"