- title "Published Experts List"

table.table
  tr
    th
    th Email
    th Full Name
    th
    th
  - @experts.each do |expert|
    tr
      td = image_tag(expert["photo"])
      td = expert["email"]
      td = expert["full_name"]
      td
        = link_to "Edit", edit_admin_expert_path(expert["id"]), class: "btn btn-primary"
      td
        = link_to "Delete", admin_expert_path(expert["id"]), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure?"