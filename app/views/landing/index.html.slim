- page_title = 'Skillpocket: Book expert professionals'
- description = 'Skillpocket is a community marketplace where expert professionals share real-world skills on demand: designers, developers, marketeers, creatives and more.'

- title page_title
- set_meta_tags title: page_title, description: description, canonical: root_url
- set_meta_tags og: { title: title, image: image_url('logo.jpg'), description: description, url: root_url }


